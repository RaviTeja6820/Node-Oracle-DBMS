<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css">
        <link rel="stylesheet" href="/stylesheets/style.css">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
          <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
      
        <title>StudentInformationSystem</title>
        <link rel="shortcut icon" href="logoFinal.png" type="image/x-icon">
    </head>
    <body class="bg-light">
            <% if(error && error.length > 0) { %>
            <div class="alert error font-weight-bold">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
            <%= error %>
            </div>
            <% } else if(success && success.length > 0) { %>
            <div class="alert success font-weight-bold">
            <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
            <%- success %>
            </div>
            <% } %>

            <nav class="navbar navbar-light hoverEffect2">
            <a class="navbar-brand" href="#">
                <img src="/logoFinal.png" width="30" height="30" class="rounded-circle" alt="">
                <strong class="text-white" style="font-size: 0.9rem;">StudentInformationSystem</strong>
            </a>
            <ul class="list-group list-group-horizontal list-unstyled">
                <li class="mr-2">
                    <form class="form-inline m-0 p-0" action="/updateGrades" method="GET">
                    <button class="btn btn-sm c71a20 text-white rounded-pill" type="submit">UpdateGrades</button>
                    </form>
                </li>
                <li class="mr-2">
                    <form class="form-inline m-0 p-0" action="/addStudent" method="GET">
                    <button class="btn btn-sm c71a20 text-white rounded-pill" type="submit">AddStudent</button>
                    </form>
                </li>
                <li class="mr-2">
                    <form class="form-inline m-0 p-0" action="/updateStudent" method="GET">
                    <button class="btn btn-sm c71a20 text-white rounded-pill" type="submit">StudentLog</button>
                    </form>
                </li>
            </ul>
            </nav>
    